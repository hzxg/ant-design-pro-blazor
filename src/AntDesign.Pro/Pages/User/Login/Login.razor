@namespace AntDesign.Pro.Template.Pages.User
@layout UserLayout
@page "/user/login"

<div class="main__b__0">
    <div class="login">
        <Form Model="@_model" OnFinish="HandleSubmit">
            <FormItem>
                <AntDesign.Input Placeholder="用户名: 同 NAS 的用户名" Size="large" @bind-Value="@context.UserName">
                    <Prefix><Icon Type="user" /></Prefix>
                </AntDesign.Input>
            </FormItem>
            <FormItem>
                <AntDesign.Input Placeholder="密码" Size="large" @bind-Value="@context.Password" Type="password">
                    <Prefix><Icon Type="lock" /></Prefix>
                </AntDesign.Input>
            </FormItem>
            <div>




                <Checkbox Checked="@context.AutoLogin">
                    自动登入
                </Checkbox>

            </div>
            <Button Type="primary" HtmlType="submit" Class="submit" Size="large" Block>登入 </Button>
        </Form>
    </div>
</div>